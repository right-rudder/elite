---
import ImageComp from "./ImageComp.astro";

const { data } = Astro.props;
---

<header
  class="relative pt-20 lg:mt-0 min-h-screen h-fit bg-gray-800 text-white flex flex-col items-center justify-end overflow-hidden"
>
  <div
    class="absolute w-full h-full inset-0 -z-0 flex flex-wrap lg:flex-nowrap overflow-hidden group"
  >
    <ImageComp
      imagePath={data.header.images[0].imagePath}
      imageAlt={data.header.images[0].imageAlt}
      styles="w-1/2 md:w-1/2 lg:w-1/5 object-cover h-full animate-slow-zoom"
      loading="eager"
      quality="99"
    />
    <ImageComp
      imagePath={data.header.images[1].imagePath}
      imageAlt={data.header.images[1].imageAlt}
      styles="w-1/2 hidden lg:block md:w-1/3 lg:w-1/5 object-cover h-full animate-slow-zoom"
      loading="eager"
      quality="99"
    />
    <ImageComp
      imagePath={data.header.images[2].imagePath}
      imageAlt={data.header.images[2].imageAlt}
      styles="w-1/2 order-first lg:order-none md:w-1/2 lg:w-1/5 object-cover h-full animate-slow-zoom"
      loading="eager"
      quality="99"
    />
    <ImageComp
      imagePath={data.header.images[3].imagePath}
      imageAlt={data.header.images[3].imageAlt}
      styles="w-1/2 hidden lg:block md:w-1/3 lg:w-1/5 object-cover h-full animate-slow-zoom"
      loading="eager"
      quality="99"
    />
    <ImageComp
      imagePath={data.header.images[4].imagePath}
      imageAlt={data.header.images[4].imageAlt}
      styles="w-1/2 hidden lg:block md:w-1/3 lg:w-1/5 object-cover h-full animate-slow-zoom"
      loading="eager"
      quality="99"
    />
  </div>
  <div
    class="absolute bg-gradient-to-b from-primary-950/40 to-primary-950/60 w-full h-full z-0"
  >
  </div>
  <!-- Text -->
  <div
    class="text-white mb-12 lg:mt-0 text-center lg:text-left z-10 flex flex-col items-center gap-4 px-5 h-full lg:pt-28 justify-center"
  >
    <h1
      class="text-3xl pt-20 lg:pt-0 md:text-6xl drop-shadow-lg max-w-3xl text-center font-black tracking-wide text-gray-100"
      set:html={data.header.headerH1}
    />
    <h2
      class="text-sm md:text-xl mt-3 font-semibold tracking-wide text-center max-w-4xl"
      set:html={data.header.paragraph}
    />
    <div
      class="mt-6 flex flex-wrap justify-center align-middle items-center gap-6 z-10"
    >
      {
        data.header.buttons.map((btn) => (
          <a
            href={btn.link}
            class={`${btn.primary ? "btn-primary" : "btn-white"} w-full md:w-auto`}
          >
            <span class="drop-shadow-sm">{btn.name}</span>
          </a>
        ))
      }
    </div>
  </div>
</header>
