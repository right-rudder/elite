---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeaderScreen from "../components/HeaderScreen.astro";
const homePage = {
  pageTitle: "Page Not Found | Elite Flight Training & Aircraft Management",
  pageDescription:
    "Sorry, the page you're looking for doesn't exist. Return to our homepage to explore flight training programs in Kankakee, IL including private pilot, instrument, and commercial training courses.",
  pageKeywords:
    "flight school Kankakee, pilot training Illinois, flight training 404, Elite Flight Training, private pilot license, aviation training",
  header: {
    imagePath: "/src/assets/greg-rosenke-p41WCA9p-ZY-unsplash.jpg",
    imageAlt:
      "Elite Flight Training & Aircraft Management cessna 172 flying away",
    headerH1: `Page<br><span class="text-accent-100">Not Found</span>`,
    paragraph:
      "We couldn't find the page you were looking for. Please explore our programs or contact us for assistance.",
    buttons: [
      {
        name: "Home",
        link: "/",
        primary: false,
      },
      {
        name: "Flight Programs",
        link: "/flight-training",
        primary: false,
      },
      {
        name: "Contact Us",
        link: "/contact",
        primary: false,
      }
    ],
  },
};

// Add popular links for users who might be lost
const popularLinks = [
  { name: "Private Pilot Training", link: "/flight-training/private-pilot-training" },
  { name: "Discovery Flights", link: "/discovery-flights" },
  { name: "Commercial Pilot Training", link: "/flight-training/commercial-pilot-training" },
  { name: "Aircraft Rental", link: "/aircraft-services/aircraft-rentals" },
  { name: "About Elite Flight Training", link: "/our-team" }
];
---

<BaseLayout
  siteTitle={homePage.pageTitle}
  siteDescription={homePage.pageDescription}
  keywords={homePage.pageKeywords}
>
  <!-- HEADER -->
  <HeaderScreen content={homePage.header} />
  
  <!-- Additional helpful content for users -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-8">Popular Flight Training Programs</h2>
        <p class="text-lg mb-8">Perhaps one of these links will help you find what you're looking for:</p>
        
        <ul class="grid md:grid-cols-2 gap-4 text-left">
          {popularLinks.map(link => (
            <li>
              <a href={link.link} class="block p-4 border rounded-lg hover:bg-gray-50 transition">
                <span class="font-medium">{link.name}</span>
                <span class="block text-sm text-gray-500 mt-1">Learn more â†’</span>
              </a>
            </li>
          ))}
        </ul>
        
        <div class="mt-12">
          <p class="mb-4">If you believe this page should exist, please contact us:</p>
          <a href="tel:+18153690525" class="text-blue-600 hover:underline">815-369-0525</a> or 
          <a href="mailto:eliteproaviation@gmail.com" class="text-blue-600 hover:underline">eliteproaviation@gmail.com</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://eliteproaviation.com/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Page Not Found",
      "item": "https://eliteproaviation.com/404"
    }
  ]
}
</script>
